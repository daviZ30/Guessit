<?xml version="1.0" encoding="utf-8"?>
<layout
    android:id="@+id/layoutDailyMenu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.dezeta.guessit.ui.menu.ViewModelMenu"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Category.CategoryFragment">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieLoadAnimationMenu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="5dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgDolar2" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cvProfile1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:backgroundTint="@color/BlueRange1_4"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toTopOf="@+id/pieChart"
            app:layout_constraintEnd_toEndOf="@+id/imgProfile1"
            app:layout_constraintStart_toStartOf="@+id/imgProfile1"
            app:layout_constraintTop_toBottomOf="@+id/btnDailyGame">

            <TextView
                android:id="@+id/tvProfile1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:gravity="center"
                android:text="User"
                android:textColor="@color/dark_green" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvProfile2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:backgroundTint="@color/BlueRange1_4"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toTopOf="@+id/pieChart"
            app:layout_constraintEnd_toEndOf="@+id/imgProfile2"
            app:layout_constraintStart_toStartOf="@+id/imgProfile2"
            app:layout_constraintTop_toBottomOf="@+id/btnDailyGame">


            <TextView
                android:id="@+id/tvProfile2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:gravity="center"
                android:text="User"
                android:textColor="@color/dark_green" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvProfile3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:backgroundTint="@color/BlueRange1_4"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toTopOf="@+id/pieChart"
            app:layout_constraintEnd_toEndOf="@+id/imgProfile3"
            app:layout_constraintStart_toStartOf="@+id/imgProfile3"
            app:layout_constraintTop_toBottomOf="@+id/btnDailyGame">

            <TextView
                android:id="@+id/tvProfile3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:gravity="center"
                android:text="User"
                android:textColor="@color/dark_green" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imgDolar1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/dolar_foreground"
            app:layout_constraintEnd_toEndOf="@+id/imgProfile1"
            app:layout_constraintStart_toStartOf="@+id/imgProfile1"
            app:layout_constraintTop_toBottomOf="@+id/cvProfile1" />

        <TextView
            android:id="@+id/tvProfile1Points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:paddingEnd="3dp"
            android:text="0"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgDolar1"
            app:layout_constraintEnd_toStartOf="@+id/imgDolar1"
            app:layout_constraintTop_toTopOf="@+id/imgDolar1" />

        <ImageView
            android:id="@+id/imgDolar2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/dolar_foreground"
            app:layout_constraintEnd_toEndOf="@+id/imgProfile2"
            app:layout_constraintStart_toStartOf="@+id/imgProfile2"
            app:layout_constraintTop_toBottomOf="@+id/cvProfile2" />

        <TextView
            android:id="@+id/tvProfile2Points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:paddingEnd="3dp"
            android:text="0"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgDolar2"
            app:layout_constraintEnd_toStartOf="@+id/imgDolar2"
            app:layout_constraintTop_toTopOf="@+id/imgDolar2" />

        <ImageView
            android:id="@+id/imgDolar3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/dolar_foreground"
            app:layout_constraintEnd_toEndOf="@+id/imgProfile3"
            app:layout_constraintStart_toStartOf="@+id/imgProfile3"
            app:layout_constraintTop_toBottomOf="@+id/cvProfile3" />

        <TextView
            android:id="@+id/tvProfile3Points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:paddingEnd="3dp"
            android:text="0"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgDolar3"
            app:layout_constraintEnd_toStartOf="@+id/imgDolar3"
            app:layout_constraintTop_toTopOf="@+id/imgDolar3" />

        <com.github.nikartm.button.FitButton
            android:id="@+id/btnDailyCountry"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            app:fb_backgroundColor="@color/BlueRange1_1"
            app:fb_cornerRadius="30dp"
            app:fb_icon="@drawable/country"
            app:fb_iconColor="#FFF"
            app:fb_iconMarginEnd="50dp"
            app:fb_iconPosition="left"
            app:fb_shape="rectangle"
            app:fb_text="@string/category_pais_diario"
            app:fb_textColor="#FFF"
            app:fb_textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.nikartm.button.FitButton
            android:id="@+id/btnDailyFootball"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            app:fb_backgroundColor="@color/BlueRange4"
            app:fb_cornerRadius="30dp"
            app:fb_icon="@drawable/football"
            app:fb_iconColor="#FFF"
            app:fb_iconMarginEnd="40dp"
            app:fb_iconPosition="left"
            app:fb_shape="rectangle"
            app:fb_text="Jugador Diario"
            app:fb_textColor="#FFF"
            app:fb_textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDailyCountry" />

        <com.github.nikartm.button.FitButton
            android:id="@+id/btnDailyGame"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            app:fb_backgroundColor="@color/BlueRange1"
            app:fb_cornerRadius="30dp"
            app:fb_icon="@drawable/camera"
            app:fb_iconColor="#FFF"
            app:fb_iconMarginEnd="40dp"
            app:fb_iconPosition="left"
            app:fb_shape="rectangle"
            app:fb_text="Serie Diaria"
            app:fb_textColor="#FFF"
            app:fb_textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDailyFootball" />




        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            app:civ_circle_background_color="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/cvProfile1"
            app:layout_constraintStart_toStartOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            app:civ_circle_background_color="@android:color/white"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/cvProfile3"
            app:layout_constraintEnd_toEndOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            app:civ_circle_background_color="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/cvProfile2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ir.mahozad.android.PieChart
            android:id="@+id/pieChart"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/layoutLegen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pieChart"
            app:layout_constraintTop_toTopOf="@+id/pieChart">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star3" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Paises"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star4" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Jugadores"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star1" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Series"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>